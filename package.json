{
  "name": "redux-async",
  "version": "1.0.0",
  "description": "A demo of different ways to work with asynchronous action creators in Redux",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathanp/redux-async.git"
  },
  "scripts": {
    "build": "browserify src/main.js -t [ babelify --presets react ] -o dist/script.js",
    "postinstall": "npm run build",
    "start": "serve dist -p 4000 & json-server -w db.json -p 3000 -d 1000",
    "watch": "watchify src/main.js -t [ babelify --presets react ] -o dist/script.js -v"
  },
  "author": "Jonathan Persson <persson.jonathan@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "json-server": "0.8.10",
    "serve": "1.4.0"
  },
  "devDependencies": {
    "babel-preset-react": "6.5.0",
    "babelify": "7.3.0",
    "browserify": "13.0.0",
    "react": "15.0.2",
    "react-dom": "15.0.2",
    "watchify": "3.7.0"
  }
}
